@page "/admin/accidents"
@page "/admin"
@inherits OwningComponentBase<ICrashRepository>

<table class="table table-sm table-striped table-bordered">

    <thead>
        <tr>
            <th>CRASH_ID</th>
            <th>CRASH_DATETIME</th>
            <th>ROUTE</th>
            <th>MILEPOINT</th>
            <th>LAT_UTM_Y</th>
            <th>LONG_UTM_Y</th>
            <th>MAIN_ROAD_NAME</th>
            <th>CITY</th>
            <th>COUNTY_NAME</th>
            <th>CRASH_SEVERITY_ID</th>
            <th>WORK_ZONE_RELATED</th>
            <th>PEDESTRIAN_INVOLVED</th>
            <th>BICYCLIST_INVOLVED</th>
            <th>MOTORCYCLE_INVOLVED</th>
            <th>IMPROPER_RESTRAINT</th>
            <th>UNRESTRAINED</th>
            <th>DUI</th>
            <th>INTERSECTION_RELATED</th>
            <th>WILD_ANIMAL_RELATED</th>
            <th>DOMESTIC_ANIMAL_RELATED</th>
            <th>OVERTURN_ROLLOVER</th>
            <th>COMMERCIAL_MOTOR_VEH_INVOLVED</th>
            <th>TEENAGE_DRIVER_INVOLVED</th>
            <th>OLDER_DRIVER_INVOLVED</th>
            <th>NIGHT_DARK_CONDITION</th>
            <th>SINGLE_VEHICLE</th>
            <th>DISTRACTED_DRIVING</th>
            <th>DROWSY_DRIVING</th>
            <th>ROADWAY_DEPARTURE</th>
        </tr>
    </thead>

    <tbody>

        @if (ProjectData?.Count() > 0)
        {
            //List the projects
            @foreach (Crash c in ProjectData)
            {
                <tr>
                    <td>@c.CRASH_ID</td>
                    <td>@p.ProjectName</td>
                    <td>@p.ProjectRegionalProgram</td>

                    <td>
                        <NavLink class="btn btn-info btn-sm" href="@GetDetailsUrl(p.ProjectId)">Details</NavLink>
                    </td>

                    <td>
                        <NavLink class="btn btn-warning btn-sm" href="@GetEditUrl(p.ProjectId)">Edit</NavLink>
                    </td>

                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="@(x => RemoveProject(p))">Delete</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No Crashes</td>
            </tr>
        }

    </tbody>

</table>


                     


