<!--Display the crashes-->
<div class="accordion" id="crash_accordion">

    <!--Iterate through all of the crashes-->
    @foreach (var c in Model.Crashes)
    {
        <div class="card card-outline-primary m-5 p-3" style="background-color: #F4F4F4; color: #545557; padding-left:50%;">
            <h4>
                Accident number: @c.CRASH_ID
            </h4>

            <!--display the date and time-->
            <div><div style="font-weight: bold; display: inline; ">Date and Time</div> @c.CRASH_DATETIME</div>

            <!--display the road name-->
            <div><div style="font-weight: bold; display: inline; ">Road:</div> @c.MAIN_ROAD_NAME</div>

            <!--display the city-->
            <div><div style="font-weight: bold; display: inline; ">City:</div> @c.CITY</div>

            <!--identify and display the severity-->
            <div>
                @if (c.CRASH_SEVERITY_ID == 1)
                {
                    <div style="font-weight: bold; display: inline; ">Accident Severity:</div>
                    <span>No Injury</span>
                }
                else if (c.CRASH_SEVERITY_ID == 2)
                {
                    <div style="font-weight: bold; display: inline; ">Accident Severity:</div>
                    <span>Possible Injury</span>
                }
                else if (c.CRASH_SEVERITY_ID == 3)
                {
                    <div style="font-weight: bold; display: inline; ">Accident Severity:</div>
                    <span>Suspected Minor Injury</span>
                }
                else if (c.CRASH_SEVERITY_ID == 4)
                {
                    <div style="font-weight: bold; display: inline; ">Accident Severity:</div>
                    <span>Suspected Major Injury</span>
                }
                else if (c.CRASH_SEVERITY_ID == 5)
                {
                    <div style="font-weight: bold; display: inline; ">Accident Severity:</div>
                    <span>Fatal</span>
                }
                else // this should never be the case
                {
                    <span>yeet</span>
                }
            </div>

            <!--Display the Route Number-->
            <div><div style="font-weight: bold; display: inline; ">Route Number:</div> @c.ROUTE</div>

            <!--Display the Milepoint-->
            <div><div style="font-weight: bold; display: inline; ">Milepoint:</div> @c.MILEPOINT</div>

            <!--Display the Lattitude-->
            <div><div style="font-weight: bold; display: inline; ">Latitude:</div> @c.LAT_UTM_Y</div>

            <!--Display the Longitude-->
            <div><div style="font-weight: bold; display: inline; ">Longitude:</div> @c.LONG_UTM_X</div>

