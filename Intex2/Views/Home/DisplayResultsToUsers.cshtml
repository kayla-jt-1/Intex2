@*PAGE TO DISPLAY ADMIN SEARCH RESULTS*@

@{
    ViewData["Title"] = "Admin – View Accidents";
    ViewData["TEST"] = "Login";
}

@model List<Crash>

<style>
    * {
        box-sizing: border-box;
    }

    #myInput {
        background-image: url('/css/searchicon.png');
        background-position: 10px 10px;
        background-repeat: no-repeat;
        width: 100%;
        font-size: 16px;
        padding: 12px 20px 12px 40px;
        border: 1px solid #ddd;
        margin-bottom: 12px;
    }

    #myTable {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid #ddd;
        font-size: 18px;
    }

        #myTable th, #myTable td {
            text-align: left;
            padding: 12px;
        }

        #myTable tr {
            border-bottom: 1px solid #ddd;
        }

            #myTable tr.header, #myTable tr:hover {
                background-color: #f1f1f1;
            }
</style>


<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for an ID.." title="Type in an ID">

<table id="myTable">
    <tr class="header">
        <th style="width:18%;">Crash ID</th>
        <th style="width:18%;">City</th>
        <th style="width:18%;">Date</th>
        <th style="width:23%;">Road Name</th>
        <th style="width:13%;">Crash Severity</th>
        <th style="width:5%;">Summary</th>
    </tr>

    @foreach (var x in Model)
    {
<tr>
    <td>@x.CRASH_ID</td>
    <td>@x.CITY</td>
    <td>@x.CRASH_DATETIME</td>
    <td>@x.MAIN_ROAD_NAME</td>
    <td>@x.CRASH_SEVERITY_ID</td>
    <td><a asp-controller="Home" asp-action="SummaryInfo" asp-route-crashid="@x.CRASH_ID">Summary</a></td>
</tr>
    }

</table>
<br />
<br />
<br />

<script>function myFunction() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("myTable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
}</script>


